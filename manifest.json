{
  "manifest_version": 2,
  "name": "Max Tab Limiter",
  "version": "1.0",
  "description": "Limits the maximum number of open tabs.",
  "permissions": [
    "tabs",
    "storage",
    "notifications"
  ],
  "background": {
    "scripts": ["background.js"]
  },
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "tablimiter@example.com",
      "strict_min_version": "42.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
